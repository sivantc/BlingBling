<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d0385cff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.blingbling.sivant.blingbling.UserHomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="427dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="648dp">

            <EditText
                android:id="@+id/ed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Price"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_above="@+id/button_purchase_coupon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="147dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <ImageView
                android:id="@+id/image_view_choosen_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_above="@+id/busniessName" />


            <EditText
                android:id="@+id/busniessName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ed_price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Busniess name"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button_purchase_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase coupon"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp" />

            <EditText
                android:id="@+id/ed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Description"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:layout_alignTop="@+id/ed_price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView_relevantTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_description"
                android:text="coupon will be relevant until" />

            <TextView
                android:id="@+id/textView_relevantTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ed_description"
                android:layout_toEndOf="@+id/textView_relevantTimeText"
                android:layout_toRightOf="@+id/textView_relevantTimeText"
                android:text="relevantTime"
                android:textAlignment="center"/>


        </RelativeLayout>
    </LinearLayout>


</ScrollView>




