<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sivant.blingbling.MainActivity"
    android:background="#d0385cff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bling"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="100dp"
        android:textColor="#fcf9f9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bling"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="100dp"
        android:textColor="#fdfcfc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ed_username"
        android:hint="Username"
        android:textAlignment="center"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ed_password"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_below="@+id/ed_username"
        android:layout_alignLeft="@+id/ed_username"
        android:layout_alignStart="@+id/ed_username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button_login"
        android:layout_below="@+id/ed_password"
        android:layout_alignLeft="@+id/ed_password"
        android:layout_alignStart="@+id/ed_password"
        android:layout_alignRight="@+id/ed_password"
        android:layout_alignEnd="@+id/ed_password" />

    <ImageButton
        android:layout_width="300dip"
        android:layout_height="45dip"
        android:id="@+id/button_login_with_facebook"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:background="@drawable/login_with_facebook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_register"
        android:layout_below="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:layout_alignRight="@+id/button_login"
        android:layout_alignEnd="@+id/button_login" />


</RelativeLayout>
