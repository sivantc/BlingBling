<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d0385cff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.blingbling.sivant.blingbling.CreateNewCoupon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="427dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="648dp">

            <EditText
                android:id="@+id/ed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Price"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_above="@+id/button_create_new_coupon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="147dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <Button
                android:id="@+id/button_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Select image from gallery" />

            <ImageView
                android:id="@+id/image_view_choosen_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ed_description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_select_image"
                android:adjustViewBounds="false"
                android:cropToPadding="false" />

            <EditText
                android:id="@+id/ed_couponId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ed_price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:hint="Coupon id"
                android:inputType="number"
                android:textAlignment="center" />

            <SeekBar
                android:id="@+id/seekBar_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_description"
                android:layout_marginTop="33dp"
                android:elevation="1dp"
                android:progressDrawable="@drawable/progress_seek_bar_distance"
                android:thumb="@drawable/thumb_seek_bar_distance">

            </SeekBar>

            <TextView
                android:id="@+id/textView_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coupon will be relevant for the next 24 hours"
                android:layout_marginRight="26dp"
                android:layout_marginEnd="26dp"
                android:layout_below="@+id/seekBar_hours"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/button_create_new_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create new coupon"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp" />

            <EditText
                android:id="@+id/ed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:layout_alignTop="@+id/ed_price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </LinearLayout>


</ScrollView>
